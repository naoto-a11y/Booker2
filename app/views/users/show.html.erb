<div>
  <%= image_tag @user.get_profile_image %>
  <h3>name: <%= @user.name %></h3>
  <h3>introduction: <%= @user.introduction %></h3>
</div>

<% @books.each do |book| %>
  <p>
    <%= link_to user_path(book.user_id) do %>
      <%= image_tag book.user.get_profile_image %>
    <% end %>
    
    title: 
    <%= link_to book_path(book.id) do %>
      <%= book.title %>
    <% end %>

    Opinion: <%= book.body %>

  </p>
<% end %>
