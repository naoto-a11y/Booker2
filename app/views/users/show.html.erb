<div class="container">
  <%= flash[:notice] %>
  <div class="row mt-3">
    <div class="col-md-3">

    <%= render 'profile', user: @user %>

    <%= render 'book', new: @new %>

  
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      
      <table class="w-100">
        <tr class="border-top border-bottom py-3">
          <th class=""></th>
          <th class="py-3">Title</th>
          <th class="py-3">Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr class="border-top">
          <td><%= link_to user_path(book.user.id) do %><%= image_tag book.user.get_profile_image %><% end %></td>
          <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

