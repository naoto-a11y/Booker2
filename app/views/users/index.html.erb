<div class="container">
  <%= flash[:notice] %>
  <% if @new.errors.any? %>
    <%= @new.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @new.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row mt-3">
    <div class="col-md-3">

    <%= render 'profile', user: @user %>

    <%= render 'book', new: @new %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      
      <table class="w-100">
        <tr class="border-top border-bottom">
          <th class="py-3 pl-2">image</th>
          <th class="py-3">name</th>
          <thclass="py-3" ></th>
        </tr>
        <% @users.each do |user| %>
        <tr class="border-top">
          <td><%= image_tag user.get_profile_image  %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(user.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>



