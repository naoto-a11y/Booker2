<div>
  <h2>New book</h2>
  
  <%= form_with model: new do |f| %>
    <h6 class="py-1">Title</h6>
      <%= f.text_field :title, class: "form-control" %>
    <h6 class="mt-3 py-1">Opinion</h6>
      <%= f.text_area :body, class: "form-control" %>
    <%= f.submit 'Create Book', class: "btn btn-success mt-3" %>
  <% end %>
</div>