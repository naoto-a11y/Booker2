<div class="container">
  <%= flash[:notice] %>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row mt-3">
    <div class="col-md-3"> 

      <%= render 'profile', user: @user %>

      <%= render 'book', book: @book %>

    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      
      <table class="table w-100">
        <tr class="border-top border-bottom py-3">
          <th class=""></th>
          <th class="py-3">Title</th>
          <th class="py-3">Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr class="border-top">
          <td><%= link_to user_path(book.user.id) do %><%= image_tag book.user.get_profile_image %><% end %></td>
          <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

